doctype html 
html(lang="ja")
  head
    meta(charset="utf-8")
    link(href="/css/app.css" rel="stylesheet" type="text/css")
  body
    include header.pug
    section(id="main")
      h1 ユーザー登録
      form(action="/signup" method="POST" encType="multipart/form-data")
        input(type="text" name="username" placeholder="名前" id="input_text")
        input(type="password" name="password" placeholder="パスワード" id="input_text")
        input(type="file" name="avatar" id="input_file")
        button(type="submit" id="submit_button") 送信